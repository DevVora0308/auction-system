<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head'); %>
</head>

<header>
  <%- include('../partials/header'); %>
</header>

<body>
    <div class="container pt-2 mt-5">
        <div class="row mt-5 pt-2">
            <div class="col pt-2">
                    <center><h3>Answered Queries</h3></center><p></p>
                    <table class="table table-bordered" style="table-layout:fixed;">
                        <thead class="thead" style="background-color: #0d6efd; color: white">
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Question</th>
                            <th scope="col">Answers</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i=0; i<data.length; i++) {%>
                              <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td><%= data[i].questionText %></td>
                                <td>
                                  <% if(data[i].answers.length==0){ %>
                                        <b>Question has not been answered yet.</b>
                                    <% } else{ %>
                                      <% for(var j=0; j<data[i].answers.length; j++) {%>
                                        Answer <%= j+1 %>: <%= data[i].answers[j] %> <br>
                                      <% } %>
                                  <% } %>
                                </td>
                              </tr>
                          <% } %>
                        </tbody>
                      </table>
            

            </div>
            <div class="col pt-2">
                <h3>Type in your Question:</h3>
                <div class="p-3 mb-2 w-80">
                    <form action="/questions/createQuestion" method="POST">
                        
                        <div class="form-floating mb-1">
                            <input type="text" class="form-control" id="question" placeholder="question"
                                name="question" required>
                            <label for="floatingEmail">Enter Question</label>
                        </div>
                        <div class="d-flex justify-content-lg-center pt-3">
                            <button type="submit" class="btn btn-primary w-25" >Post Question</button>
                        </div>
                    </form>
                    </div>

            </div>



        </div>
    </div>
</body>
</html>