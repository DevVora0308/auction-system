    }

    .button {
      position: relative;
    }

    .button button {
      height: 45px;
      width: 100%;
      background-color: #0d6efd;
      border: none;
      outline: 0;
      border-radius: 9px;
      font-size: 13px;
      color: #fff;
      cursor: pointer;
      transition: all 0.5s;
    }

    .button p {
      position: absolute;
      right: 10px;
      top: 24px;
      font-size: 13px;
      color: #fff;
      cursor: pointer;
      transition: all 0.5s;
    }

    .button:hover p {
